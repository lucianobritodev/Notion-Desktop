{
  "name": "notion-desktop",
  "version": "1.0.0",
  "description": "A desktop client for Notion",
  "main": "dist/main.js",
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "lint": "eslint -c .eslintrc --ext .ts ./src",
    "start": "npm run build && electron ./dist/main.js",
    "clean": "rimraf build",
    "bundle:x64": "electron-packager . notion-desktop --asar --overwrite --platform=linux --arch=x64 --icon=dist/assets/icons/notion-desktop.png --prune=true --out=build/",
    "deb:x64": "electron-installer-debian --src build/notion-desktop-linux-x64/ --arch amd64 --config config.json",
    "dist:linux": "npm run clean && npm run bundle:x64 && npm run deb:x64"
  },
  "repository": "https://github.com/lucianobritodev/Notion-Desktop",
  "keywords": [
    "notion",
    "tasks",
    "todo",
    "list",
    "project"
  ],
  "author": "Luciano Brito",
  "license": "MIT",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "@typescript-eslint/parser": "^4.33.0",
    "electron": "^22.2.0",
    "eslint": "^7.32.0",
    "typescript": "^4.8.3",
    "electron-installer-debian": "^3.1.0",
    "electron-packager": "^17.1.1",
    "rimraf": "^3.0.2"
  },
  "dependencies": {}
}
